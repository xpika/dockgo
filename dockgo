alias dockbuild='docker build -t "${PWD##*/}" .'
alias dockrun='docker rm -f "${PWD##*/}" ; docker run $([ -d workdir ] && echo -v `pwd`/workdir:/root/workdir) -p 80:80 -i -d -t --name "${PWD##*/}" "${PWD##*/}"'
alias dockattach='docker attach "${PWD##*/}"'   
alias dockstop='docker stop "${PWD##*/}"'                                                           
alias dockgo='dockbuild ; dockrun ; dockattach'  
alias dockenter='docker exec -i -t "${PWD##*/}" /bin/bash'
